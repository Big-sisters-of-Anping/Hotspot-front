/* pages/user/myorder.wxss */
.first_tab .orders_item {
  display: flex;
  border-bottom: 3rpx solid #ccc;
  padding: 30rpx;
}
.first_tab .orders_item .orders_info_wrap {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
}
.first_tab .orders_item .orders_info_wrap .order_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-origin: vertical;
  font-size: 35rpx;
}
.first_tab .orders_item .orders_time_wrap {
  display: flex;
  flex: 3;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 25rpx;
}
.first_tab .orders_item .orders_time_wrap .order_date {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-origin: vertical;
  font-size: 35rpx;
}
.first_tab .orders_item .orders_time_wrap .order_time {
  display: -webkit-box;
  color: red;
  overflow: hidden;
  -webkit-box-origin: vertical;
  font-size: 35rpx;
}
.first_tab .orders_item .orders_time_wrap .order_People {
  color: #4b87ee;
  font-size: 30rpx;
}
.first_tab .orders_item .delete_wrap {
  flex: 1;
}
