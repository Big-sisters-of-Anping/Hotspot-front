.container{
  height: 1500rpx;
}
.container .search{
  width: 740rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #2A8CE5;
}
.container .search-left{
  flex: 8;
  background: #4EA3E7;
  text-align: left;
  width: 98%;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.container{
  padding: 0;
  /* font-size: 14rpx; */
  color: #000;
}

 .a{
  display: inline-block;
  height: 40rpx;
} 

.container .search-item{
  width: 650rpx;
  padding: 30rpx 20rpx 20rpx 30rpx;
  margin: 7rpx 0 6rpx 25rpx;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}

.container .search-item .item-img{
  object-fit:cover; 
}

.container .search-item .spot text{
  font-size: 60rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}

.container .search-item .like{
  /* width: 600rpx; */
  padding: 10rpx 0  0;
  color: #a0acac;
  font-size: 20rpx;
}
.container .feed-item .feed-content .like view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}

.container .spot-info{
  display: flex;
  justify-content: space-between;
}

.container .spot-info .riskimg{
  width: 35rpx;
  height: 50rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
}

.container .spot-info .risk{
  padding-right: 10rpx;
  color: #a0acac;
  font-size: 20rpx;
  padding-bottom: 30rpx;
}

